#
# File managed by Puppet
#

<%= @name %> {
<%- @options.each do | opt_key,opt_val | -%>
  <%- if opt_val.is_a?(Hash) -%>
    <%= opt_key -%> {
    <%- opt_val.each do |v_key, v_val| -%>
      <%- if v_val.is_a?(Hash) -%>
        <%= v_key -%> {
        <%- v_val.each do |key, val| -%>
          <%= key -%> = <%= val %>
        <%- end -%>
        }
    <%- else -%>
        <%= v_key -%> = <%= v_val %>
    <%- end -%>
  <%- end -%>
    }
  <%- else -%>
  <%= opt_key -%> = <%= opt_val %>
  <%- end -%>
<%- end -%>
}
